# compiler flags.  -g for debug, -O3 for optimization

CFLAGS=-g -O3



# first target is built by default

all: tokenizer



# include file dependencies

history.o: history.h

tokenizer.o: history.h

make: UI.c history.c tokenizer.c

	cc -o make UI.c history.c tokenizer.c

# $@=target, $^=prerequisites

tokenizer: UI.c history.c tokenizer.c

	cc -o $@ $^ $(CFLAGS)



# deletes files generated by compilation

clean:

	rm -f *.o tokenizer
